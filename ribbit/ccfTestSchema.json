{
    "name": "CCF Test",
    "description": "Log CCF Tests",
    "additonalProperties": false,
    "type": [
        "array",
        "object"
    ],
    "items": {
        "type": "object",
        "$ref": "#"
    },
    "properties": {
        "id": {
            "type": "string",
            "description": "[GET] Test Id",
            "readonly": true
        },
        "testTel": {
            "type": "string",
            "format": "uri",
            "description": "[GET/POST] The number tested"
        },
        "divertTel": {
            "type": "string",
            "format": "uri",
            "description": "[GET/POST] The Number calls to testDevice should be forwarded to "
        },
        "testDate": {
            "type": "string",
            "format": "date-time",
            "readonly": true,
            "description": "[GET] The time the test was requested"
        },
        "appURI": {
            "type": "string",
            "readonly": true,
            "description": "[GET] Application that requested this CCF test"
        },
        "guid": {
            "type": "string",
            "readonly": true,
            "description": "[GET] GUID for the user that requested this CCF test"
        },
        "status": {
            "type": "string",
            "enum": [
                "passed",
                "failed",
                "pending"
            ],
            "optional": true,
            "readonly": true,
            "description": "[GET] The current status of the test"
        },
        "cause": {
            "type": "object",
            "description": "Reason for the call termination. Only provided when CCF test status is failed",
            "optional": true,
            "properties": {
                "code": {
                    "type": "number",
                    "description": "The SIP Response Code which terminated the call. Supported Local Causes could include 200 - Normal clear (ISDN 16), 302 - Moved Temporarily (ISDN ???), 402 - Payment Required , 403 Forbidden, 404 - Not Found (ISDN 1, 2, 3), 408 Request Timeout, 500 - Internal Server Error, etc."
                },
                "detail": {
                    "type": "string",
                    "description": "Additional Information associated with this call (eg transfered destination or SIP response code description)",
                    "optional": true
                },
                "source": {
                    "type": "string",
                    "description": "Remote causes are received from the network, local causes are generated by Ribbit",
                    "enum": [
                        "remote",
                        "local"
                    ]
                }
            }
        }
    },
    "links": [
        {
            "rel": "self",
            "href": "/services/ribbit/ccfTest/{id}"
        },
        {
            "rel": "instances",
            "href": "/services/ribbit/ccfTest",
            "description": "Query CCF Tests",
            "properties": {
                "testTel": {
                    "$ref": "#.properties.testTel"
                },
                "divertTel": {
                    "$ref": "#.properties.divertTel"
                },
                "status": {
                    "$ref": "#.properties.status"
                },
                "sinceTestDate": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Date for the oldest tests in the results set."
                }
            }
        },
        {
            "rel": "create",
            "href": "/services/ribbit/ccfTest",
            "method": "post"
        }
    ]
}